<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 2.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_2_0.dtd">
<tiles-definitions>
	<definition name="mainTemplate" template="/WEB-INF/layout/mainLayout.jsp">
		<put-attribute name="top" value="/WEB-INF/layout/top.jsp" />
		<put-attribute name="content" value="/WEB-INF/layout/content.jsp" />
		<put-attribute name="footer" value="/WEB-INF/layout/footer.jsp" />
	</definition>
	<definition name="index" extends="mainTemplate"></definition>

	<definition name="login" extends="mainTemplate">
		<put-attribute name="content" value="/WEB-INF/member/member_login.jsp"></put-attribute>
		<put-attribute name="footer" value="/WEB-INF/layout/footer2.jsp"></put-attribute>
	</definition>

	<definition name="register" extends="mainTemplate">
		<put-attribute name="content"
			value="/WEB-INF/member/member_register.jsp"></put-attribute>
		<put-attribute name="footer" value="/WEB-INF/layout/footer2.jsp"></put-attribute>
	</definition>

	<definition name="profile" extends="mainTemplate">
		<put-attribute name="content" value="/WEB-INF/member/member_profile.jsp"></put-attribute>
		<put-attribute name="footer" value="/WEB-INF/layout/footer2.jsp"></put-attribute>
	</definition>

	<definition name="modify" extends="mainTemplate">
		<put-attribute name="content" value="/WEB-INF/member/member_modify.jsp"></put-attribute>
		<put-attribute name="footer" value="/WEB-INF/layout/footer2.jsp"></put-attribute>
	</definition>

	<definition name="requestTemplate" template="/WEB-INF/request/requestLayout.jsp">
		<put-attribute name="top" value="/WEB-INF/layout/top.jsp" />
		<put-attribute name="request" value="/WEB-INF/request/request.jsp" />
		<put-attribute name="footer" value="/WEB-INF/layout/footer.jsp" />
	</definition>

	<definition name="request" extends="requestTemplate"></definition>
</tiles-definitions>




