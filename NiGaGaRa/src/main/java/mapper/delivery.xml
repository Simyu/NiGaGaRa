<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="nigagara.delivery">
	<select id="list" resultType="delivery" parameterType="String">
		select *
		from delivery
		where delivery_Man = #{delivery_Man}
	</select>
	
	<select id="select" resultType="delivery" parameterType="Integer">
		select * from delivery where deliveryNum=#{deliveryNum}
	</select>
	
	<insert id="insert" parameterType="delivery">
		insert into delivery(delivery_num,sender,delivery_man,departure_time,arrival_time,delivery_state,goods_num,delivery_qr)
		values(delivery_seq.nextval,#{sender},#{delivery_Man},null,null,'1',#{goods_Num},'0')
	
	</insert>
</mapper>